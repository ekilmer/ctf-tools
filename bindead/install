#!/bin/bash -ex

INST_DIR="$PWD"

[ -e bindead ] || git clone --depth 1 https://bitbucket.org/mihaila/bindead.git
cd bindead
./build.sh
mvn install
cd ..

[ -e p9 ] || git clone --depth 1 https://bitbucket.org/mihaila/p9.git
cd p9
./build.sh
unzip p9.zip
cd ..

mkdir -p bin
cat <<END > bin/bindead
#!/bin/bash
java -jar $INST_DIR/bindead/bindead.jar "\$@"
END
cat <<END > bin/p9
#!/bin/bash
$INST_DIR/p9/p9/bin/p9 "\$@"
END
chmod 755 bin/*
